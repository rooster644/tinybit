<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<servlet>
		<servlet-name>SessionJS</servlet-name>
		<servlet-class>com.rooster644.tinybit.server.SessionJS</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ID</servlet-name>
		<servlet-class>com.rooster644.tinybit.server.MyProfile</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SessionJS</servlet-name>
		<url-pattern>/session</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ID</servlet-name>
		<url-pattern>/id</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>NewID</servlet-name>
		<servlet-class>com.rooster644.tinybit.server.NewProfile</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NewID</servlet-name>
		<url-pattern>/id/new</url-pattern>
	</servlet-mapping>
	<servlet>
     <servlet-name>CSRFJSServlet</servlet-name>
     <servlet-class>org.owasp.csrfguard.servlet.JavaScriptServlet</servlet-class>
     <init-param>
         <param-name>source-file</param-name>
         <param-value>WEB-INF/lib/Owasp.CsrfGuard.js</param-value>
     </init-param>
     <init-param>
         <param-name>inject-into-forms</param-name>
         <param-value>true</param-value>
     </init-param>
     <init-param>
         <param-name>inject-into-attributes</param-name>
         <param-value>true</param-value>
     </init-param>
    <init-param>
         <param-name>domain-strict</param-name>
         <param-value>false</param-value>
    </init-param>
    <init-param>
         <param-name>referer-pattern</param-name>
         <param-value>.*tinybit-desktop.appspot.com*</param-value>
    </init-param>
	</servlet>
	<servlet-mapping>
	<servlet-name>CSRFJSServlet</servlet-name>
	<url-pattern>/csrf/js</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
		<filter>
		<filter-name>CSRFGuard</filter-name>
		<filter-class>org.owasp.csrfguard.CsrfGuardFilter</filter-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>WEB-INF/lib/Owasp.CsrfGuard.properties</param-value>
		</init-param>
		<init-param>
			<param-name>print-config</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
		<filter-mapping>
		<filter-name>CSRFGuard</filter-name>
		<url-pattern>/c/*</url-pattern>
		</filter-mapping>
		    <security-constraint>
        <web-resource-collection>
            <url-pattern>/client/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
     <security-constraint>
        <web-resource-collection>
            <url-pattern>/control/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>
